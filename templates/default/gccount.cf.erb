%% =========================================================
%% TASK DEFINITIONS
%% =========================================================

deftask gunzip( out( File ) : gz( File ) )in bash *{
  out=${gz%.gz}
  gzip -c -d $gz > $out
}*

%% =========================================================
%% INPUT DATA
%% =========================================================

fa_gz = "Homo_sapiens.GRCh38.dna.chromosome.Y.fa.gz";

%% =========================================================
%% WORKFLOW DEFINITION
%% =========================================================

fa = gunzip( gz: fa_gz );

%% =========================================================
%% QUERY
%% =========================================================

fa;